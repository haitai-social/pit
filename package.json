{
  "name": "@haitai-social/pit",
  "version": "1.0.5",
  "description": "A CLI tool for managing conversation history and chat records",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pit": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "dev:mcp": "ts-node src/mcp/index.ts",
    "prepack": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haitai-social/pit.git"
  },
  "keywords": [
    "cli",
    "prompt",
    "git",
    "ai",
    "conversation",
    "chat-history",
    "prompt-management",
    "conversation-logs",
    "ai-tools",
    "chat-records",
    "version-control",
    "tool-calls",
    "mcp",
    "model-context-protocol",
    "claude",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haitai-social/pit/issues"
  },
  "homepage": "https://github.com/haitai-social/pit#readme",
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "npm-check-updates": "^18.3.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "mcp": {
    "server": {
      "command": "node",
      "args": [
        "dist/mcp/index.js"
      ]
    }
  }
}
